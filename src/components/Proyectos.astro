import FirebaseIcon from "./icons/FirebaseIcon.astro";
import FramerIcon from "./icons/FramerIcon.astro";
import ApolloIcon from "./icons/ApolloIcon.astro";
import WordpressOIcon from "./icons/WordpressIcon.astro";

const TAGS = {
    html: {
        name: "HTML",
        class: "bg-gray-600/70 text-white",
        icon: HTML_Icon,
    },
    css: {
        name: "CSS",
        class: "bg-gray-600/70 text-white",
        icon: CSS_Icon,
